{% extends 'base.html.twig' %}

{% block body %}
    <h1>Travels list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for travel in travels %}
            <tr>
                <td><a href="{{ path('travel_show', { 'id': travel.id }) }}">{{ travel.id }}</a></td>
                <td>{{ travel.cost }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('travel_show', { 'id': travel.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('travel_edit', { 'id': travel.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('travel_new') }}">Create a new travel</a>
        </li>
    </ul>
{% endblock %}
